<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">

  <schema path="/org/gnome/shell/extensions/duolingostatus2/" id="org.gnome.shell.extensions.duolingostatus2">

	<key type="s" name="username">
        <default>''</default>
    </key>

    <key type="s" name="password">
        <default>''</default>
    </key>

    <key type="b" name="hide-when-daily-goal-reached">
    	<default>false</default>
    </key>

    <key type="b" name="change-icon-color-when-daily-goal-reached">
    	<default>false</default>
    </key>

    <key type="s" name="icon-color-when-daily-goal-reached">
    	<default>'rgb(138,226,52)'</default>
    </key>

    <key type="s" name="icon-color-when-daily-goal-not-reached">
    	<default>'rgb(255,0,0)'</default>
    </key>

    <key type="b" name="use-default-browser">
    	<default>true</default>
    </key>

    <key type="s" name="opening-browser-command">
    	<default>'xdg-open'</default>
    </key>

    <key type="i" name="app-chooser-active-index">
    	<default>0</default>
    </key>

    <key type="b" name="is-reminder">
    	<default>false</default>
    </key>

    <key type="s" name="notification-time">
    	<default>'23:00'</default>
    </key>

    <key type="b" name="show-icon-in-notification-tray">
    	<default>false</default>
    </key>

    <key type="b" name="show-lingots">
    	<default>true</default>
    </key>

    <key type="b" name="show-gems">
    	<default>true</default>
    </key>

    <key type="b" name="show-double-or-nothing">
    	<default>true</default>
    </key>

    <key type="b" name="show-frozen">
    	<default>true</default>
    </key>

    <key type="s" name="icon-position">
        <default>'right'</default>
    </key>

    <key type="s" name="icon-index">
        <default>'0'</default>
    </key>

  </schema>
</schemalist>
